@model List<Pizza>

@if (Model.Count == 0)
{
    <h3>Non ci sono Pizze!</h3>
}
else
{

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mt-3 mb-3">Lista posts</h1>
                </div>

                <table class="table pizza-list-table">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Foto</th>
							<th>Descrizione</th>
							<th>Prezzo</th>
                            <th>Dettagli</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Pizza pizza in Model)
                        {
                            <tr>
                                <td class="nome">@pizza.Nome</td>
                                <td class="foto"><img class="pizza-list-image" src="@pizza.Foto"></td>
                                <td class="descrizione">@pizza.Descrizione</td>
                                <td class="prezzo">@pizza.Prezzo</td>
                                <td>
                                    <a class="btn btn-primary" href="@Url.Action("Details", "Pizza", new { id = @pizza.ID } )" role="button">Dettagli</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
}


